  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/node": "^24.0.4",
    "openai": "^5.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@iarna/toml": "2.2.5",
    "chatvim": "0.3.9",
    "yaml": "2.8.0",
    "zod": "3.25.67"
  }
}
